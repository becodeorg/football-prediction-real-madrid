# Environment Configuration Template for S&P 500 Prediction System
# Copy this file to .env and customize for your deployment

# ================================
# GENERAL CONFIGURATION
# ================================

# Environment mode: development, production, testing
ENVIRONMENT=production

# Application timezone
TZ=UTC

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application secret key (generate a secure random key)
SECRET_KEY=your-secret-key-here

# ================================
# SCHEDULER CONFIGURATION
# ================================

# Scheduler type: blocking, background
SCHEDULER_TYPE=blocking

# Maximum concurrent workers
MAX_WORKERS=3

# Job persistence database URL
SCHEDULER_DB_URL=sqlite:///data/scheduler_jobs.sqlite

# ================================
# EMAIL NOTIFICATIONS
# ================================

# Email notifications enabled
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTP configuration
NOTIFICATION_EMAIL=your-email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# Notification recipients (comma-separated)
NOTIFICATION_RECIPIENTS=admin@yourcompany.com

# ================================
# DATA CONFIGURATION
# ================================

# Data directories
DATA_DIR=/app/data
RAW_DATA_DIR=/app/data/raw
PROCESSED_DATA_DIR=/app/data/processed
MODELS_DIR=/app/models
LOGS_DIR=/app/logs

# Yahoo Finance API settings
YAHOO_FINANCE_TIMEOUT=30
YAHOO_FINANCE_RETRIES=3
SP500_SYMBOL=^GSPC
VIX_SYMBOL=^VIX

# Data validation
DATA_VALIDATION_THRESHOLD=0.95
LOOKBACK_DAYS=5
CHECK_MARKET_HOURS=true

# ================================
# SCHEDULING
# ================================

# Data update schedule (cron format: minute hour day month day_of_week)
DATA_UPDATE_SCHEDULE=0 22 * * MON-FRI

# Model retraining schedule
MODEL_RETRAIN_SCHEDULE=0 2 * * SUN

# Prediction generation schedule  
PREDICTION_SCHEDULE=0 23 * * MON-FRI

# Health check interval (hours)
HEALTH_CHECK_INTERVAL=6

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=300

# ================================
# MODEL CONFIGURATION
# ================================

# Model validation threshold
MODEL_VALIDATION_THRESHOLD=0.6

# Model backup retention (days)
MODEL_BACKUP_RETENTION_DAYS=30

# Cross-validation folds
CV_FOLDS=5

# ================================
# MONITORING
# ================================

# Resource monitoring enabled
RESOURCE_MONITORING_ENABLED=true

# Alert thresholds (percentage)
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
CPU_ALERT_THRESHOLD=80

# ================================
# DASHBOARD CONFIGURATION
# ================================

# Dashboard settings
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_THEME=light
DASHBOARD_REFRESH_INTERVAL=300

# ================================
# SECURITY
# ================================

# API authentication (if using API)
API_AUTH_ENABLED=false
API_KEY=your-api-key-here

# Dashboard authentication (if needed)
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure-password

# ================================
# PERFORMANCE
# ================================

# CPU cores to use (-1 for all available)
N_JOBS=-1

# Memory limits
PANDAS_MEMORY_LIMIT=1000
SKLEARN_THREAD_LIMIT=4

# ================================
# BACKUP SETTINGS
# ================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 3 * * SUN

# ================================
# DEVELOPMENT/DEBUG
# ================================

# Debug settings (for development only)
DEBUG=false
VERBOSE=false
TEST_MODE=false
