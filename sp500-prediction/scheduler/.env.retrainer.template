# Model Retrainer Configuration Template
# Copy this to .env or create retrainer_config.json

# Email Notifications (same as daily_data_update.py)
NOTIFICATION_EMAIL=your.email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@example.com
SMTP_PASSWORD=your_app_password

# Model Retraining Settings
RETRAINING_FREQUENCY=weekly  # weekly, monthly, manual
MIN_TRAINING_SAMPLES=100
IMPROVEMENT_THRESHOLD=0.02   # 2% improvement required for deployment
AUTO_DEPLOY=true
BACKUP_RETENTION_DAYS=90

# Model Training Settings
MODELS_TO_TRAIN=random_forest,gradient_boosting,logistic_regression
CROSS_VALIDATION_FOLDS=5
FEATURE_SELECTION=true
HYPERPARAMETER_TUNING=true

# Performance Thresholds
MIN_ACCURACY_THRESHOLD=0.52
MAX_PERFORMANCE_VARIANCE=0.1

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true
PERFORMANCE_TRACKING=true
