# Prediction Generator Configuration Template
# Copy this to .env or create prediction_config.json

# Email Notifications (same as other schedulers)
NOTIFICATION_EMAIL=your.email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@example.com
SMTP_PASSWORD=your_app_password

# Prediction Settings
PREDICTION_HORIZONS=1                    # Days ahead to predict (comma-separated: 1,2,5)
PREDICTION_TYPES=direction               # Types to predict (comma-separated: direction,price,volatility)
CONFIDENCE_THRESHOLD=0.6                 # Minimum confidence for predictions (0.0-1.0)
MAX_PREDICTION_AGE_DAYS=90              # How long to keep predictions in database

# Dashboard Settings  
ENABLE_DASHBOARD_UPDATE=true            # Whether to update dashboard data
DASHBOARD_HISTORICAL_DAYS=90            # Days of historical data for dashboard
DASHBOARD_CACHE_DIR=data/cache          # Where to store dashboard cache files

# Database Settings
PREDICTION_DB_PATH=data/predictions.db  # SQLite database path
ENABLE_DATABASE_BACKUP=true            # Whether to backup database
DATABASE_CLEANUP_ENABLED=true          # Whether to cleanup old predictions

# Validation Settings
VALIDATE_PREDICTIONS=true               # Whether to validate predictions before saving
UPDATE_ACTUAL_VALUES=true              # Whether to update actual values from historical data
MIN_CONFIDENCE_THRESHOLD=0.5           # Minimum allowed confidence score

# Performance Tracking
ENABLE_PERFORMANCE_TRACKING=true       # Whether to track prediction performance
PERFORMANCE_WINDOW_DAYS=30             # Days to consider for recent performance
GENERATE_PERFORMANCE_REPORTS=true     # Whether to generate performance reports

# Logging
LOG_LEVEL=INFO                         # Logging level (DEBUG, INFO, WARNING, ERROR)
DETAILED_LOGGING=true                  # Whether to enable detailed logging
LOG_PREDICTIONS=true                   # Whether to log individual predictions
LOG_DASHBOARD_UPDATES=true            # Whether to log dashboard updates
