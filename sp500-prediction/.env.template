# Environment Configuration for Daily Data Update
# Copy this file to .env and fill in your actual values

# Email Notifications (optional but recommended)
NOTIFICATION_EMAIL=your-email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# Data Update Settings
MAX_RETRIES=3
RETRY_DELAY=60
DATA_VALIDATION_THRESHOLD=0.95
LOOKBACK_DAYS=5

# Yahoo Finance symbols (don't change unless you know what you're doing)
SP500_SYMBOL=^GSPC
VIX_SYMBOL=^VIX

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Market Hours Check (set to false to disable market hours validation)
CHECK_MARKET_HOURS=true
